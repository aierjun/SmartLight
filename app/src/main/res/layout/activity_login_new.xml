<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnLoginAnonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匿名登录"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_username"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_passcode"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名登录"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/rg_thirdAccount"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rb_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="百度"
            />
        <RadioButton
            android:id="@+id/rb_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="新浪"
            />
        <RadioButton
            android:id="@+id/rb_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="qq"
            />
    </RadioGroup>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_uid"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_uid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_token"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_token"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
    </LinearLayout>
    
    <Button
        android:id="@+id/btnThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方登录"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">
        <TextView
            android:id="@+id/action_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_register"
            android:textSize="16sp"
            android:layout_marginRight="150dp"/>
        <TextView
            android:id="@+id/action_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_reset"
            android:textSize="16sp"
            android:layout_toRightOf="@id/action_register"/>
    </RelativeLayout>



</LinearLayout>